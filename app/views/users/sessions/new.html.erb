<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'signup' }) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: '' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>    
    
  </div>

  <div class="form-group">
    <%= f.label :password, class: '' %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-check">
      <%= f.check_box :remember_me, class: 'form-check-input' %>
      <%= f.label :remember_me, class: '' %>
    </div>
  <% end -%>

  <%= f.submit "Log in", class: 'btn btn-primary' %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: ''%><br />
  <% end -%>
<% end %>

